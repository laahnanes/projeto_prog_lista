<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainSceneController" style="-fx-background-color: #f2f2f2;">

    <!-- Conteúdo central -->
    <center>
        <VBox spacing="20" alignment="CENTER">
            <ListView fx:id="listaDeCompras" prefHeight="200.0" prefWidth="400.0"/>
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="campoDeTexto" promptText="Adicionar item..." style="-fx-font-size: 14px; -fx-pref-width: 200px; -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #CCCCCC; -fx-padding: 5px;"/>
                <Button fx:id="adicionarItemButton" mnemonicParsing="false" text="Adicionar" onAction="#adicionarItem" style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-padding: 8px 16px;"/>
                <Button fx:id="removerItemButton" mnemonicParsing="false" text="Remover" onAction="#removerItem" style="-fx-font-size: 14px; -fx-background-color: #F44336; -fx-text-fill: white; -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-padding: 8px 16px;"/>
            </HBox>
        </VBox>
    </center>

    <!-- Conteúdo inferior -->
    <bottom>
        <VBox spacing="20" alignment="CENTER">
            <ComboBox fx:id="comboBoxListas" promptText="Selecionar Lista..." style="-fx-font-size: 14px; -fx-pref-width: 200px; -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #CCCCCC; -fx-padding: 5px;" onAction="#exibirListaSelecionada"/>
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="criarListaButton" mnemonicParsing="false" text="Criar Lista" onAction="#criarLista" style="-fx-font-size: 14px; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-padding: 8px 16px;"/>
                <Button fx:id="excluirListaButton" mnemonicParsing="false" text="Excluir Lista" onAction="#excluirLista" style="-fx-font-size: 14px; -fx-background-color: #FF5722; -fx-text-fill: white; -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-padding: 8px 16px;"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
